{
  "ConnectionStrings": {
    "DefaultConnection": "server=.\\SQLEXPRESS;database=dashboard_programme;user id=dev;password=dev;Trusted_Connection=True"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "SendGrid": {
    "ApiKey": "SG.XXXXX"
  },
  "Mailing": {
    "FromName": "Dashboard Programme",
    "FromAddress": "mailing@dashboard-programme.com",
    "ToAddressForDevelopment": "your-email@gmail.com"
  },
  "CorsDomains": [
    "localhost:7101",
    "localhost:44385"
  ],
  "Application": {
    "BaseUrl": "https://localhost:7101",
    "RedirectUrl": "https://localhost:44385",
    "ErrorNotificationDestination": "your-email@gmail.com"
  },
  "Azure": {
    "ConnectionString": "DefaultEndpointsProtocol=https;AccountName=XXXX;AccountKey=XXXX;EndpointSuffix=core.windows.net"
  },
  "Serilog": {
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/logs-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff zzz} {RequestId} {Level:u3}] {Message:lj}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Information",
          "Override": {
            "Microsoft": "Warning",
            "System": "Debug"
          }
        }
      }
    ],
    "Properties": {
      "Application": "dashboard-programme"
    }
  }
}
